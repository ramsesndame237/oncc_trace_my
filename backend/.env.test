# Environment de Test pour Backend
# Ce fichier est utilisé lors de l'exécution des tests (npm run test)

NODE_ENV=test
PORT=3333
HOST=localhost
APP_KEY=test-app-key-for-ci-cd-pipeline-change-in-production
LOG_LEVEL=info

# Deployment mode
DEPLOY_MODE=dev

# Database (fournie par GitHub Actions services)
DB_HOST=localhost
DB_PORT=5432
DB_USER=test_user
DB_PASSWORD=test_password
DB_DATABASE=test_db

# Redis (fourni par GitHub Actions services)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_SESSION_DB=1
REDIS_CACHE_DB=2
REDIS_KEY_PREFIX=test:

# MinIO (pas nécessaire pour les tests unitaires)
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_ACCESS_KEY=test_minio
MINIO_SECRET_KEY=test_minio_secret
MINIO_USE_SSL=false
MINIO_BUCKET=test-bucket
MINIO_CONSOLE_PORT=9001
MINIO_PUBLIC_ENDPOINT=localhost

# Session
SESSION_DRIVER=cookie

# Branding
APP_NAME=ONCC TRACE TEST
SUPPORT_EMAIL=test@example.com
SUPPORT_PHONE=

# Frontend
FRONTEND_URL=http://localhost:3000

# Email (mode test - pas d'envoi réel)
MAIL_MAILER=smtp
SENDER_EMAIL=test@example.com
SENDER_NAME=ONCC Test
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=
SMTP_PASSWORD=

# Passwords pour les seeders de test
DEFAULT_PASSWORD=12345678
QA_DEFAULT_OTP=000000
